<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:layout_width="300dp"
              android:layout_height="250dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="20dp" android:orientation="vertical"
                  android:layout_marginHorizontal="20dp"
    >
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="저장할 이름" android:textSize="13dp"
        />
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textSize="15dp"
                  android:hint="저장할 이름 입력"
                  android:layout_marginVertical="5dp"
                  android:gravity="fill_horizontal"
                  android:inputType="textMultiLine"
                  android:id="@+id/edit_friend_name"
                  android:padding="5dp" android:background="@drawable/border"
        />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_margin="20dp" android:orientation="vertical"
    >
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="추가할 친구의 ID" android:textSize="13dp"
        />
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:gravity="fill_horizontal"
                  android:id="@+id/edit_friend_id"
                  android:textSize="15dp"
                  android:hint="ID"
                  android:inputType="textMultiLine"
                  android:background="@drawable/border"
                  android:layout_marginVertical="5dp"
                  android:padding="5dp"
        />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal" android:layout_marginHorizontal="20dp"
                  android:layout_marginTop="10dp">
        <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content" android:layout_height="match_parent"
                android:text="SUMMIT" android:background="@color/white"
                android:layout_marginEnd="45dp"
                android:id="@+id/btn_add_friend"
                android:textColor="#0277BD" android:layout_gravity="start"/>
        <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content" android:layout_height="match_parent"
                android:layout_marginStart="45dp"
                android:text="CANCEL" android:background="@color/white"
                android:id="@+id/btn_cancel"
                android:textColor="#3C3C3C" android:layout_gravity="end"/>
    </LinearLayout>
</LinearLayout>