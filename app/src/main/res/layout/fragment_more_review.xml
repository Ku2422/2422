<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/ivory"
             tools:context=".MoreReviewFragment">
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_marginTop="10dp" android:orientation="vertical"
                  android:layout_weight="1"
                  android:layout_marginHorizontal="20dp"
    >
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="위치" android:textSize="18dp"
                  android:fontFamily="@font/auction_gothic"
        />
        <TextView android:layout_width="match_parent" android:layout_height="60dp"
                  android:text="상세 위치" android:textSize="15dp"
                  android:id="@+id/item_locate"
                  android:layout_marginVertical="5dp"
                  android:padding="8dp"
                  android:fontFamily="@font/auction_gothic"
        />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_marginHorizontal="20dp" android:orientation="vertical"
                  android:layout_weight="1"
                  android:layout_marginBottom="10dp"
    >
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="후기" android:textSize="18dp"
                  android:fontFamily="@font/auction_gothic"
        />
        <TextView android:layout_width="match_parent" android:layout_height="60dp"
                  android:text="상세 리뷰" android:textSize="15dp"
                  android:layout_marginVertical="5dp"
                  android:id="@+id/item_review"
                  android:padding="8dp"
                  android:fontFamily="@font/auction_gothic"
        />
    </LinearLayout>
    <fragment
            android:layout_width="match_parent" android:layout_height="0dp"
            android:layout_weight="4"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/map"/>

</LinearLayout>